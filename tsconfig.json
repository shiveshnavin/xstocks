{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "*.ts"
  ]
}